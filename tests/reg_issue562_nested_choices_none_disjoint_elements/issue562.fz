ex =>
  my_choice : choice (choice nil string) nil is
    redef asString =>
      match my_choice.this
        choice choice nil string =>
          match choice
            nil nil => "inner nil"
            string string => string
        nil nil => "outer nil"

  a my_choice := nil
  b my_choice := "string"

  say a
  say b

