# A test value types that have inner features that depend on their outer
# feature, while this outer feature v is also a value type that gets replaced
# by different actual value- and ref-types that are heirs of v.
#
valWithDynOuter is


  chck(str, expected String) =>
    if str = expected
      say "PASSED: $str"
    else
      say "FAILED: $str /= $expected"
      _ := set_exit_code 1

  # test if e.y produces expected as result
  #
  # e is of type v.e, which is a value type whose outer type is also
  # a value type. Neverthelesse, the outer type 'v' will be replaced
  # by different other outer types producing
  #
  test(e v.e, expected String) =>
    str := e.y
    chck str expected

  testrv(e ref_v.e, expected String) =>
    str := e.y
    chck str expected

  testw(e w.e, expected String) =>
    str := e.y
    chck str expected

  tests(e s.e, expected String) =>
    str := e.y
    chck str expected

  test_mut(e v.e, expected String) =>
    e.mut
    str := e.y
    chck str expected

  testrv_mut(e ref_v.e, expected String) =>
    e.mut
    str := e.y
    chck str expected

  testw_mut(e w.e, expected String) =>
    e.mut
    str := e.y
    chck str expected

  tests_mut(e s.e, expected String) =>
    e.mut
    str := e.y
    chck str expected

  ref_v (f String) ref is
    x String => abstract
    e is
      y => ".$x."
      mut unit =>
        set f := f+f
    g => e

  v (redef f String) : ref_v f is
    a => "v"
    x => "$f-$a:v.x"

  w : v "w" is
    redef a => "w"
    redef x => "$f-$a:w.x"

  t : v "t" is
    redef a => "t"
    redef x => "$f-$a:t.x"

/* NYI: this does not compile yet

  u : v "u" is
    redef a => "u"
    redef e v.e is
      y => "-$x-"
      tt ref v := t
      tt.e
*/

  s ref : v "s" is
    redef a => "s"
    redef x => "$f-$a:s.x"

  # 'normal' test:
  #
  # heir features of the outer feature
  #
  test (v "v1").e ".v1-v:v.x."
  testw w.g ".w-w:w.x."
  rv ref_v := v "v2"
#  testrv rv.g ".v2-v:v.x."
  rw ref_v := w
#  testrv rw.g ".w-w:w.x."
#  tests s.g ".s-s:s.x."

  # extend 'outer's lifespan
  #
  # inner feature e extends outer feature's lifespan
  #
  q1 v.e => (v "v1").e
  test q1 ".v1-v:v.x."
  q2 w.e => w.g
  testw q2 ".w-w:w.x."
  q3 ref_v.e =>
    rv ref_v := v "v2"
    rv.e
#    rv.g
  testrv q3 ".v2-v:v.x."
  q4 ref_v.e =>
    rw ref_v := w
    rw.e
#    rw.g
  testrv q4 ".w-w:w.x."
#  q5 s.e is s.g
  q5 s.e => s.e
  tests q5 ".s-s:s.x."

  # mutating test
  #
  # inner feature e mutates outer feature
  #
  o := v "v1"
  chck o.f "v1"
  test_mut o.e ".v1v1-v:v.x."
  chck o.f "v1v1"

  o := w
  chck o.f "w"
  testw_mut o.g ".ww-w:w.x."
  chck o.f "ww"

  rv2 ref_v := v "v2"
  o := rv2
  chck o.f "v2"
#  testrv_mut rv2.g ".v2v2-v:v.x."
#  chck o.f "v2v2"

  rw2 ref_v := w
  o := rw2
  chck o.f "w"
#  testrv_mut rw2.g ".ww-w:w.x."
#  chck o.f "ww"

  o := s
  chck o.f "s"
#  tests_mut o.g ".ss-s:s.x."
#  chck o.f "ss"

  exit
