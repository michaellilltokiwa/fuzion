issue556 =>
  some_choice_including_nil : choice nil string is

  a  some_choice_including_nil := nil
  b  some_choice_including_nil := "string"

  c := [a,b]

  match (c.nth 0)
    s some_choice_including_nil =>
      match s
        nil nil => say "n2"
        string string => say "s"
    nil nil => say "n1"

  match (c.nth 1)
    s some_choice_including_nil =>
      match s
        nil nil => say "n2"
        string string => say "s"
    nil nil => say "n1"
