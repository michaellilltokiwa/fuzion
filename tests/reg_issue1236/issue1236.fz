# calling `show` with ref to different dynamic types, using
# `Any.dt0`, which is an additional implementation of
# Any.dynamic_type.
#
test3 is
  Any.dt0 => "sdfaa"
  a ref is
    b : c is

  c : a is

  show(x a) => say x.dt0

  show c

_ := test3
