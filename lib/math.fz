#
math is

  # eulers number
  # holds to closest f64 to eulers number
  e => 2.7182818284590452354

  # π
  # holds to closest f64 to pi
  pi => 3.14159265358979323846
  π => pi

  # sinus
  sin(a f64) f64 is intrinsic
  # cosinus
  cos(a f64) f64 is intrinsic
  # tangens
  tan(a f64) f64 is intrinsic

  # arcus sinus
  asin(a f64) f64 is intrinsic
  # arcus cosinus
  acos(a f64) f64 is intrinsic
  # arcus tangens
  atan(a f64) f64 is intrinsic

  # sinus hyperbolicus
  sinh(a f64) f64 is intrinsic
  # cosinus hyperbolicus
  cosh(a f64) f64 is intrinsic
  # tangens hyperbolicus
  tanh(a f64) f64 is intrinsic

  # natural logarithm
  log(a f64) f64 is intrinsic

  # common logarithm
  # (logarithm to base 10)
  log10(a f64) f64 is intrinsic

  # square root
  sqrt(a f64) f64 is intrinsic

  # NYI the following are native in "java"
  # expm1 is intrinsic
  # log1p is intrinsic
  # atan2(y f64, x f64) is intrinsic
