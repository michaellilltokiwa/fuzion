ascii is

  ##
  # byte values of control code defined in ASCII
  ##

  # Null
  nul => u8 0
  # Start of Heading
  soh => u8 1
  # Start of Text
  stx => u8 2
  # End of Text
  etx => u8 3
  # End of Transmission
  eot => u8 4
  # Enquiry
  enq => u8 5
  # Acknowledgement
  ack => u8 6
  # Bell
  bel => u8 7
  # Backspace
  bs  => u8 8
  # Horizontal Tab
  ht  => u8 9
  # Line Feed
  lf  => u8 10
  # Vertical Tab
  vt  => u8 11
  # Form Feed
  ff  => u8 12
  # Carriage Return
  cr  => u8 13
  # Shift Out
  so  => u8 14
  # Shift In
  si  => u8 15
  # Data Link Escape
  dle => u8 16
  # Device Control 1 (often XON)
  dc1 => u8 17
  # Device Control 2
  dc2 => u8 18
  # Device Control 3 (often XOFF)
  dc3 => u8 19
  # Device Control 4
  dc4 => u8 20
  # Negative Acknowledgement
  nak => u8 21
  # Synchronous Idle
  syn => u8 22
  # End of Transmission Block
  etb => u8 23
  # Cancel
  can => u8 24
  # End of Medium
  em  => u8 25
  # SUB  Substitute
  ss  => u8 26
  # Escape
  esc => u8 27
  # File Separator
  fs  => u8 28
  # Group Separator
  gs  => u8 29
  # Record Separator
  rs  => u8 30
  # Unit Separator
  us  => u8 31
  # Delete
  del => u8 127


  ##
  # control codes defined in ASCII as strings
  ##

  # Null
  nul_str => String.type.fromBytes [nul]
  # Start of Heading
  soh_str => String.type.fromBytes [soh]
  # Start of Text
  stx_str => String.type.fromBytes [stx]
  # End of Text
  etx_str => String.type.fromBytes [etx]
  # End of Transmission
  eot_str => String.type.fromBytes [eot]
  # Enquiry
  enq_str => String.type.fromBytes [enq]
  # Acknowledgement
  ack_str => String.type.fromBytes [ack]
  # Bell
  bel_str => String.type.fromBytes [bel]
  # Backspace
  bs_str  => String.type.fromBytes [bs]
  # Horizontal Tab
  ht_str  => String.type.fromBytes [ht]
  # Line Feed
  lf_str  => String.type.fromBytes [lf]
  # Vertical Tab
  vt_str  => String.type.fromBytes [vt]
  # Form Feed
  ff_str  => String.type.fromBytes [ff]
  # Carriage Return
  cr_str  => String.type.fromBytes [cr]
  # Shift Out
  so_str  => String.type.fromBytes [so]
  # Shift In
  si_str  => String.type.fromBytes [si]
  # Data Link Escape
  dle_str => String.type.fromBytes [dle]
  # Device Control 1 (often XON)
  dc1_str => String.type.fromBytes [dc1]
  # Device Control 2
  dc2_str => String.type.fromBytes [dc2]
  # Device Control 3 (often XOFF)
  dc3_str => String.type.fromBytes [dc3]
  # Device Control 4
  dc4_str => String.type.fromBytes [dc4]
  # Negative Acknowledgement
  nak_str => String.type.fromBytes [nak]
  # Synchronous Idle
  syn_str => String.type.fromBytes [syn]
  # End of Transmission Block
  etb_str => String.type.fromBytes [etb]
  # Cancel
  can_str => String.type.fromBytes [can]
  # End of Medium
  em_str  => String.type.fromBytes [em]
  # SUB  Substitute
  ss_str  => String.type.fromBytes [ss]
  # Escape
  esc_str => String.type.fromBytes [esc]
  # File Separator
  fs_str  => String.type.fromBytes [fs]
  # Group Separator
  gs_str  => String.type.fromBytes [gs]
  # Record Separator
  rs_str  => String.type.fromBytes [rs]
  # Unit Separator
  us_str  => String.type.fromBytes [us]
  # Delete
  del_str => String.type.fromBytes [del]
