public ascii is

  ##
  # byte values of control code defined in ASCII
  ##

  # Null
  module nul => u8 0
  # Start of Heading
  module soh => u8 1
  # Start of Text
  module stx => u8 2
  # End of Text
  module etx => u8 3
  # End of Transmission
  module eot => u8 4
  # Enquiry
  module enq => u8 5
  # Acknowledgement
  module ack => u8 6
  # Bell
  module bel => u8 7
  # Backspace
  module bs  => u8 8
  # Horizontal Tab
  module ht  => u8 9
  # Line Feed
  module lf  => u8 10
  # Vertical Tab
  module vt  => u8 11
  # Form Feed
  module ff  => u8 12
  # Carriage Return
  module cr  => u8 13
  # Shift Out
  module so  => u8 14
  # Shift In
  module si  => u8 15
  # Data Link Escape
  module dle => u8 16
  # Device Control 1 (often XON)
  module dc1 => u8 17
  # Device Control 2
  module dc2 => u8 18
  # Device Control 3 (often XOFF)
  module dc3 => u8 19
  # Device Control 4
  module dc4 => u8 20
  # Negative Acknowledgement
  module nak => u8 21
  # Synchronous Idle
  module syn => u8 22
  # End of Transmission Block
  module etb => u8 23
  # Cancel
  module can => u8 24
  # End of Medium
  module em  => u8 25
  # SUB  Substitute
  module ss  => u8 26
  # Escape
  module esc => u8 27
  # File Separator
  module fs  => u8 28
  # Group Separator
  module gs  => u8 29
  # Record Separator
  module rs  => u8 30
  # Unit Separator
  module us  => u8 31
  # Delete
  module del => u8 127


  ##
  # control codes defined in ASCII as strings
  ##

  # Null
  module nul_str => String.type.from_bytes [nul]
  # Start of Heading
  module soh_str => String.type.from_bytes [soh]
  # Start of Text
  module stx_str => String.type.from_bytes [stx]
  # End of Text
  module etx_str => String.type.from_bytes [etx]
  # End of Transmission
  module eot_str => String.type.from_bytes [eot]
  # Enquiry
  module enq_str => String.type.from_bytes [enq]
  # Acknowledgement
  module ack_str => String.type.from_bytes [ack]
  # Bell
  module bel_str => String.type.from_bytes [bel]
  # Backspace
  module bs_str  => String.type.from_bytes [bs]
  # Horizontal Tab
  module ht_str  => String.type.from_bytes [ht]
  # Line Feed
  module lf_str  => String.type.from_bytes [lf]
  # Vertical Tab
  module vt_str  => String.type.from_bytes [vt]
  # Form Feed
  module ff_str  => String.type.from_bytes [ff]
  # Carriage Return
  module cr_str  => String.type.from_bytes [cr]
  # Shift Out
  module so_str  => String.type.from_bytes [so]
  # Shift In
  module si_str  => String.type.from_bytes [si]
  # Data Link Escape
  module dle_str => String.type.from_bytes [dle]
  # Device Control 1 (often XON)
  module dc1_str => String.type.from_bytes [dc1]
  # Device Control 2
  module dc2_str => String.type.from_bytes [dc2]
  # Device Control 3 (often XOFF)
  module dc3_str => String.type.from_bytes [dc3]
  # Device Control 4
  module dc4_str => String.type.from_bytes [dc4]
  # Negative Acknowledgement
  module nak_str => String.type.from_bytes [nak]
  # Synchronous Idle
  module syn_str => String.type.from_bytes [syn]
  # End of Transmission Block
  module etb_str => String.type.from_bytes [etb]
  # Cancel
  module can_str => String.type.from_bytes [can]
  # End of Medium
  module em_str  => String.type.from_bytes [em]
  # SUB  Substitute
  module ss_str  => String.type.from_bytes [ss]
  # Escape
  module esc_str => String.type.from_bytes [esc]
  # File Separator
  module fs_str  => String.type.from_bytes [fs]
  # Group Separator
  module gs_str  => String.type.from_bytes [gs]
  # Record Separator
  module rs_str  => String.type.from_bytes [rs]
  # Unit Separator
  module us_str  => String.type.from_bytes [us]
  # Delete
  module del_str => String.type.from_bytes [del]
