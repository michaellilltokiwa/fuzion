# err -- effect providing an output stream
#
priv err (redef p Can_Print) : print_effect p is


  type.install_default =>
    (io.err default_print_to_err).default


  type.default_print_to_err : io.Can_Print is
    print(s Any) => fuzion.sys.err.print s


# short-hand for accessing err effect in current environment
#
err =>
  err.type.install_default
  io.err.env
