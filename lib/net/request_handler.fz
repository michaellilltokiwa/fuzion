# a request handler effect that is used by
# `net.server.accept` and `net.client`
# for handeling new connections.
#
public request_handler(h Request_Handler) : simple_effect is

  public handle_request(c net.channel) unit =>
    h.handle_request c


# request handler
public Request_Handler ref is
  # NYI needs effect to abort handling of request?
  public handle_request(c net.channel) unit => abstract
