socket_type is

  # connection-based byte-stream
  # this must be used for TCP
  stream is
    redef as_string => ""

  # connection-less messages with fixed maximum length
  # this must be used for UDP
  datagram is
    redef as_string => ""

  # no tcp/udp, raw access to network protocol layer
  raw is
    redef as_string => ""


  # NYI needs better name
  socket_type_choice : choice socket_type.stream datagram raw is
    # NYI these numbers are system dependent
    as_num i32 is
      match socket_type_choice.this
        socket_type.stream => 1
        datagram => 2
        raw => 3
