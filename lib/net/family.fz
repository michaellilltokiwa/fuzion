family is

  # local is used to communicate between processes, mostly on unix-like systems
  local is
    redef as_string String is
      "local"

  # Internet Protocol Version 4
  ipv4 is
    redef as_string String is
      "IPv4"

  # Internet Protocol Version 6
  ipv6 is
    redef as_string String is
      "IPv6"


  # NYI needs better name
  # NYI numbers are system dependent
  family_choice : choice local ipv4 ipv6 is
    as_num i32 is
      match family_choice.this
        local => 1  # pipes etc.
        ipv4  => 2
        ipv6  => 10

    redef as_string String is
      match family_choice.this
        l local => l.as_string
        i4 ipv4  => i4.as_string
        i6 ipv6  => i6.as_string
