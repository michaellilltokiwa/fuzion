protocol is

  tcp is
    redef as_string => "Transmission Control Protocol"

  udp is
    redef as_string => "User Datagram Protocol"

  local is

  ipv4 is
    redef as_string => "Internet Protocol Version 4"

  ipv6 is
    redef as_string => "Internet Protocol Version 6"


  # NYI these numbers are system dependent
  # NYI needs better name
  protocol_choice : choice ipv4 tcp udp ipv6 is
    as_num i32 is
      match protocol_choice.this
        ipv4 => 0
        tcp => 6
        udp => 17
        ipv6 => 41

